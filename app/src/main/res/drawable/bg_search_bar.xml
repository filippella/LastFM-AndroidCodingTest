<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke android:width="@dimen/search_bar_stroke_size" android:color="#4078c7" />
            <corners android:radius="@dimen/search_bar_corner_radius" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke android:width="@dimen/search_bar_stroke_size" android:color="@android:color/darker_gray" />
            <corners android:radius="@dimen/search_bar_corner_radius" />
        </shape>
    </item>
</selector>
